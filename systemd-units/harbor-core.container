[Unit]
Requires=harbor-registry.service harbor-redis.service harbor-db.service
After=harbor-registry.service harbor-redis.service harbor-db.service

[Container]
ContainerName=harbor-core
Pod=harbor.pod
Image=goharbor/harbor-core:v2.13.0
DropCapability=ALL
AddCapability=SETGID SETUID
EnvironmentFile=harbor-core.env
Network=harbor.network
Volume=/data/:/data/:z
Volume=/data/ca_download/:/etc/core/ca/:z
Volume=/data/secret/core/private_key.pem:/etc/core/private_key.pem:z
Volume=/data/secret/keys/secretkey:/etc/core/key:z
Volume=/home/harbor/harbor-rootless/harbor-core/certificates/:/etc/core/certificates/:z
Volume=/home/harbor/harbor-rootless/harbor-core/app.conf:/etc/core/app.conf:z
Volume=/home/harbor/harbor-rootless/trust-certificates:/harbor_cust_cert:z

[Service]
Restart=always
